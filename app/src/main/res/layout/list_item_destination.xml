<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_destination_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textStyle="bold"
        android:hint="@string/destination_name_hint"
        />

    <TextView
        android:id="@+id/list_item_destination_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_destination_name"
        android:paddingTop="4dp"
        android:hint="@string/destination_description_hint"
        />


</RelativeLayout>