<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/list_item_destination_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/list_item_destination_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item_destination_image"
                android:paddingTop="@dimen/top_primary_text_padding"
                android:paddingLeft="@dimen/left_right_primary_text_padding"
                android:paddingRight="@dimen/left_right_primary_text_padding"
                android:paddingBottom="@dimen/bottom_primary_text_padding"
                android:textSize="@dimen/primary_text"
                android:gravity="center_vertical"
                android:hint="@string/destination_name_hint"
                />

            <TextView
                android:id="@+id/list_item_destination_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_destination_name"
                android:textSize="@dimen/supporting_text"
                android:padding="@dimen/supporting_text_padding"
                android:gravity="center_vertical"
                android:hint="@string/destination_description_hint"
                />

            <Button
                android:id="@+id/list_item_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item_destination_description"
                android:padding="@dimen/action_padding"
                android:text="@string/share"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                />

            <Button
                android:id="@+id/list_item_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_destination_description"
                android:layout_toRightOf="@id/list_item_share"
                android:paddingLeft="@dimen/action_padding"
                android:text="@string/explore"
                android:background="@android:color/transparent"

                android:gravity="center_vertical"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>