<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="day"
        android:paddingBottom="@dimen/body_text_padding"
        android:paddingLeft="@dimen/body_text_padding"
        android:paddingRight="@dimen/body_text_padding"
        android:textSize="@dimen/body_text"/>

    <TextView
        android:id="@+id/list_item_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_day"
        android:hint="hours"
        android:paddingBottom="@dimen/body_text_padding"
        android:paddingLeft="@dimen/body_text_padding"
        android:paddingRight="@dimen/body_text_padding"
        android:textSize="@dimen/body_text"/>

</RelativeLayout>